#include <stdio.h>

int main()
{
    int luachon;
    do
    { 
        printf("-------ASM 2 Trần Hải Dương PS49769-------\n");
        printf("1.Kiem tra so nguyen\n");
        printf("2.Tim uoc so chung va boi so chung cua 2 so\n");
        printf("3.Tinh tien cho quan karaoke\n");
        printf("4.Tinh tien dien\n");
        printf("5.Doi tien\n");
        printf("6.Tinh lai suat vay ngan hang vay tra gop\n");
        printf("7.Vay tien mua xe\n");
        printf("8.Sap xep thong tin sinh vien (da loai bo)\n");
        printf("9.Xay dunng game FPOLY-LOTT\n");
        printf("10.Tinh toan giai phan so\n");
        printf("0.Thoat\n");
        printf("Nhap chuc nang:");
        scanf("%d",&luachon);

        switch(luachon)
        {
        case 1: 
        {
            int x,nt=0,cp=0;
            printf("Nhap so x: \n");
            scanf("%d", &x);
            if(x<0)
                printf("%d khong phai so nguyen\n",x);
            else
                printf("%d la so nguyen\n",x);

            if (x==1)
            {
                printf("%d khong phai so nguyen to\n",x);
                nt = 1;
            }
            else 
            {
                for(int i =2;i<x;i++)
                {
                    if(x %i==0)
                    {
                        nt++;
                        break;
                    }
                }
            }
            if(nt==0)
                printf("%d la so nguyen to\n",x);
            else
                printf("%d khong phai la so nguyen to\n",x);

            if (x == 0 || x == 1)
                printf("%d la so chinh phuong\n",x);
            else 
            {
                for(int i = 1 ;i*i<=x;i++)
                {
                    if(i*i == x)
                    {
                        cp++;
                        break;
                    }
                }
            }
            if (cp == 1)
                printf("%d la so chinh phuong\n",x);
            else 
                printf("%d khong phai la so chinh phuong\n",x);
            break;
        }
        case 2: 
        {
            int so1,so2,ucln=1,bcnn,i;
            printf("Nhap so: \n");
            scanf("%d %d", &so1, &so2);
            for(i =1;i<=so1 && i<=so2;i++)
            {
               if(so1 % i == 0 && so2 % i == 0)
                   ucln = i;
            }
            printf("Uoc chung lon nhat la: %d\n",ucln);
            bcnn = (so1*so2)/ucln;
            printf("Boi chung nho nhat la: %d\n",bcnn);
            break;
        }
        
        case 3:
{
    int start, end;
    float total = 0;
    const float giaCoBan = 30000; // 30.000 VND/giờ

    printf("Nhap gio bat dau (0-24): ");
    scanf("%d", &start);
    printf("Nhap gio ket thuc (0-24): ");
    scanf("%d", &end);

    if(start < 0 || start > 24 || end < 0 || end > 24 || end <= start) {
        printf("Thoi gian khong hop le!\n");
    } else {
        int soGio = end - start;

        // Quy định: từ 18h đến 24h giá gấp rưỡi
        for(int i = start; i < end; i++) {
            if(i >= 18 && i < 24)
                total += giaCoBan * 1.5;
            else
                total += giaCoBan;
        }

        // Giảm giá 10% nếu hát trên 3 giờ
        if(soGio > 3) {
            total = total * 0.9;
        }

        printf("So gio hat: %d\n", soGio);
        printf("Tong tien karaoke: %.0f VND\n", total);
    }
    break;
}
        case 4:
            printf("ban da chon chuc nang 4 tinh tien dien\n");
            break;
        case 5:
            printf("ban da chon chuc nang 5 doi tien\n");
            break;
        case 6: 
            printf("ban da chon chuc nang 6 tinh lai suat vay\n");
            break;
        case 7: 
            printf("ban da chon chuc nang 7 vay tien mua xe\n");
            break;
        case 8:  
            printf("Chuc nang 8 (sap xep sinh vien) da loai bo\n");
            break;
        case 9: 
            printf("ban da chon chuc nang 9 xay dung game FPOLY-LOTT\n");
            break;
        case 10: 
            printf("ban da chon chuc nang 10 tinh toan giai phan so\n");
            break;
        case 0:
            break;
        default:
            printf("chuc nang khong hop le moi nhap lai\n");
            break;
        }
     } while (luachon !=0);
    return 0;
}
